{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Siri-Admin-app",
  "version": "0.1.0",
  "identifier": "com.siriartjewellery.dev",
  "build": {
    "frontendDist": "../.next",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Siri Art Jewellery Admin App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../.next",
      "../node_modules",
      "../public",
      "../package.json",
      "../package-lock.json",
      "../app/data",
      "../lib",
      "node"
    ]
  }
}
