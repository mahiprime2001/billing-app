{
  "$schema": "https://schema.tauri.app/config/2.8.5",
  "identifier": "com.siriartjewellery.dev",
  "productName": "Siri-Admin-app",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../.next"
  },
  "app": {
    "windows": [
      {
        "title": "Siri Art Jewellery Admin App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true,
        "url": "about:blank"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/mahiprime2001/billing-app/releases/latest/download/latest.json"
      ],
      "pubkey": "PLACEHOLDER_PUBLIC_KEY"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../.next",
      "../node_modules",
      "../public",
      "../package.json",
      "../package-lock.json",
      "../app/data/json",
      "../app/data/mysql",
      "../lib",
      "../server.js",
      "../tsconfig.json",
      "../tsconfig.script.json",
      "../.env",
      "../middleware.ts",
      "node"
    ]
  }
}
